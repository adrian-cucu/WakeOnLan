        <item name="android:windowBackground">@color/background_window</item>


        <item name="ic_arrow_back">@drawable/ic_arrow_back_black</item>
        <item name="ic_confirm_list">@drawable/ic_confirm_list_black</item>
        <item name="ic_add">@drawable/ic_add_white</item>
        <item name="ic_button_background">@drawable/icon_rounded_background</item>
        <item name="switch_track">@drawable/switch_track</item>
        <item name="switch_thumb">@drawable/switch_thumb</item>
    </style>


